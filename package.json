  },
  "dependencies": {
    "@changesets/cli": "2.27.1"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "29.5.11",
    "jest": "29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "29.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.9.0"
}
